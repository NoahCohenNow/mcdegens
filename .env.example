# Solana RPC Configuration
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY

# Wallet Configuration (KEEP PRIVATE!)
CREATOR_WALLET_PRIVATE_KEY=your_base58_private_key_here

# Token Configuration
YMN_TOKEN_MINT=your_ymn_token_mint_address_here
CREATOR_FEE_WALLET=your_creator_fee_wallet_address_here

# Timing Configuration (in minutes)
CHECK_INTERVAL_MINUTES=10
MIN_BALANCE_TO_PROCESS=0.1

# Split Configuration
BUYBACK_PERCENTAGE=50
AIRDROP_PERCENTAGE=50

# Airdrop Configuration
MIN_HOLDERS_FOR_AIRDROP=10
NUMBER_OF_WINNERS_PER_ROUND=1
MIN_HOLDER_BALANCE=100

# Slippage for swaps (in basis points, 100 = 1%)
SLIPPAGE_BPS=300

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# GitHub Integration (for auto-pushing stats.json)
GITHUB_AUTO_PUSH=true
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO=username/repo-name
GITHUB_BRANCH=main
